<center>
<div>
<div class=" col-lg-8 center_overlay">
	<div class ="col-lg 2 center_overlay">

	<h1 style = "color:white">Welcome to Love Bulk!</h2>
	<h2 style = "color: #B4EEF5">Sign Up</h2>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<h4 style = "color: #FA0300"><%= devise_error_messages! %></h4>

			<div style = "color: #B4EEF5"><%= f.label :pic %><br />
			<%= f.file_field :pic_id %></div>

			<div style = "color: #B4EEF5"><%= f.label :name %><br />
			<%= f.text_field :name, :autofocus => true %></div>

			<div style = "color: #B4EEF5">	<%= f.label :gender %>
						<%= f.radio_button :gender, '1', :checked=>"checked"%> man
						<%= f.radio_button :gender, '0'%> woman
			</div>

			<div style = "color: #B4EEF5"><%= f.label :email %><br />
			<%= f.email_field :email %></div>

			<div style = "color: #B4EEF5"><%= f.label :password %><br />
			<%= f.password_field :password %></div>

			<div style = "color: #B4EEF5"><%= f.label :password_confirmation %><br />
			<%= f.password_field :password_confirmation %>
</div>

			</br>
			<div style = "color: #B4EEF5"><%= f.submit "Sign up" %></div>
		<% end %>

		<p>
			<%= render "devise/shared/links" %>
		</p>
	</div>
</div>
</div>
</center>
