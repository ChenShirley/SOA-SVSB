<center>
<div>
<div class=" col-lg-8 center_overlay">
	<div class ="col-lg 2 center_overlay">

		<h2 style = "color: #73be60">Product Request</h2>
</br>

<div style="float:right;">
	<%= image_tag @product.pic.url(:medium)  %>
	</br>
	</br>

	<div style="text-align:center;margin-bottom:20px;height:28px;font-size:13px;border:1px solid #73be60;background-color:#73be60;float:right;cursor:pointer;-webkit-border-radius: 5px;-moz-border-radius: 5px;border-radius: 5px;">
		<span style="float:right;font-weight:bold;text-align:center;">
			 <%= link_to('Be a Buyer', :controller=>"buy", :action=>"new", :product=>@product.id) %>
		</span>
	</div>
	</br>
	</br>

	<!-- be a buyer -->
	<div>
	<span style="float:right;font-weight:bold;text-align:center; color:white;">
			<%= image_tag "http://graph.facebook.com/#{@buy.user.uid}/picture?type=small" %>
	</span>
	</div>


<% if @product.buy_id!=nil and @buy.quantity>@product.quantity %>
	<div style="text-align:center;margin-bottom:20px;height:28px;font-size:13px;border:1px solid #73be60;background-color:#73be60;float:right;cursor:pointer;-webkit-border-radius: 5px;-moz-border-radius: 5px;border-radius: 5px;">
		<span style="float:right;font-weight:bold;text-align:center;">
			 <%= link_to('I want to join', :controller=>"join", :action=>"new", :product=>@product.id) %>
		</span>
	</div>
<% end %>

</div>
	</br>
	</br>

<% if @product.buy_id!=nil and @buy.quantity>@product.quantity %>
	<div>
		<% @join.each do |join| %>
	<span style="float:right;font-weight:bold;text-align:center; color:white;">
			<%= join.user.name %>
			<%= image_tag "http://graph.facebook.com/#{join.user.uid}/picture?type=small" %>
	</span>
		<% end %>
	</div>
<% end %>

		<span style = "color: #B4EEF5">Requester: <%= @product.user.name %></sapn>
		</br>
		<span style = "color: #B4EEF5">Product Name: <%= @product.productname %></sapn>
		</br>
		<span style = "color: #B4EEF5">Category:
			<% case @product.category %>
				<% when 'food' %>
				<%= "Food" %>
				<% when 'toiletries' %>
				<%= "Toiletries" %>
				<% when 'stationary' %>
				<%= "Stationary" %>
			<% end %>
		</sapn>
		</br>
		<span style = "color: #B4EEF5">Quantity: <%= @product.quantity %></sapn>
		</br>
		<span style = "color: #B4EEF5">Max. Acceptable Price: <%= @product.maxprice %></sapn>
		</br>
		<span style = "color: #B4EEF5">		Location / District: 
			<% case @product.location %>
				<% when '1' %>
				<%= "Taipei" %>
				<% when '2' %>
				<%= "HsinChu" %>
				<% when '3' %>
				<%= "Taichung" %>
				<% when '4' %>
				<%= "Tainan" %>
				<% when '5' %>
				<%= "Kaohsiung" %>
				<% when '6' %>
				<%= "Eastern Taiwan" %>
			<% end %>
		</sapn>
		</br>
		<span style = "color: #B4EEF5">Request Dealine: <%= @product.deadline %></sapn>
		</br>
		<span style = "color: #B4EEF5">Discriptions: <%= simple_format(@product.description) %></sapn>
		</br>

		<div id="fb-root"></div>
		<script>
		(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/zh_TW/all.js#xfbml=1&appId=189142694620805";
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
		</script>

		<div class="fb-like" data-href=<%= "http://soa-svsb.herokuapp.com/product/#{@product.id}"%> data-width="100" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>

		<div class="fb-comments" data-href=<%= "http://soa-svsb.herokuapp.com/product/#{@product.id}"%> data-width="600" data-numposts="5" data-colorscheme="light"></div>

		<div><%= link_to 'Back to homepage', product_index_path %></div>

</div>

</div>
</div>
</center>
